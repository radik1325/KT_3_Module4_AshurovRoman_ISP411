<Window x:Class="AshurovRoman_DataUser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AshurovRoman_DataUser"
        mc:Ignorable="d"
        Title="{Binding  ElementName=NewFrame , Path=Content.Title}" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF76E383">
            <TextBlock Text="Прокат спортивного инвентаря" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"></TextBlock>
            <Image Source="/Resources/logo.png" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="170,0,0,0"/>

        </Grid>
        <Frame Grid.Row="1" x:Name="NewFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
